{% for x in range(0, pod_test.pod_cnt) %}
---
apiVersion: v1
kind: Pod    
metadata:   
  name: test-pod-{{ x }}
  namespace: test-xyz
  labels: 
    perf-test: "true"
spec:           
  containers:
  - name: webserver 
    image: {{ test_image }}
    command: ["sleep"]
    args: ["infinity"]
    ports:            
    - containerPort: 80
{% endfor %}
